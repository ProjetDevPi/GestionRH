{% extends 'baseadmin.html.twig' %}

{% block container %}
    <div class="pcoded-content" xmlns="http://www.w3.org/1999/html">
        <div class="pcoded-inner-content">

            <div class="main-body">
                <div class="page-wrapper">

                    <div class="page-header">
                        <div class="row align-items-end">
                            <div class="col-lg-8">
                                <div class="page-header-title">
                                    <div class="d-inline">

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                    <div class="page-body">
                        <div class="row">
                            <div class="col-sm-12">

                                <div class="card">
                                    <div class="card-header">

                                    </div>
                                    <div class="card-block">
                                        <h4 class="sub-title">Ajouter une Séance</h4>

                                        {{ form_start(form, {'method': 'post', 'action': path('seance_new') }) }}

                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.jour,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Jour','required' :'1'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.type,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Type de séance','required' :'1'} }) }}
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.salle,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Salle de Classe','required' :'1'} }) }}
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-sm-10">
                                                {{ form_row(form.matiere,{ 'attr': {'class': 'form-control form-control-round','placeholder': 'Matiere','required' :'1'} }) }}
                                            </div>
                                        </div>


                                        <button type="submit" class="btn btn-danger" value="Create" />Ajouter Séance
                                        </button>

                                        {{ form_end(form) }}



                                    </div>
                                </div>
                            </div>

                            <ul>
                                <li>
                                    <a href="{{ path('seance_index') }}">Back to the list</a>
                                </li>
                            </ul>



                            <div id="styleSelector">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock container %}





